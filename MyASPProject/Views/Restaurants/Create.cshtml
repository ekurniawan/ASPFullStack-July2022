@model MyASPProject.ViewModels.RestaurantEditViewModel
@{
    ViewData["Title"] = "Create New Restaurant";
}

<h1 class="mt-4">Create New Restaurant</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Daftar Restaurant</li>
</ol>

<div class="card mb-4">
    <div class="card-body">
        <div class="col-md-6">
            <form asp-action="Create">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Name :</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Cuisine" class="control-label">Cuisine Type :</label>
                    <select asp-for="Cuisine" asp-items="@Html.GetEnumSelectList<CuisineType>()" class="form-control"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>
